{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ES2020", "ES2021", "DOM", "DOM.Iterable"],
        "moduleResolution": "bundler",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "allowJs": true,
        "noEmit": true,
        "incremental": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "paths": {
            "@/*": ["./src/*"],
            "@C/*": ["./components/*"],
            "@CTX/*": ["./contexts/*"],
            "@STYLES/*": ["./public/assets/css/*"],
            "@GLOBALS": ["./globals.ts"],
            "@PUBLIC/*": ["./public/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
